{
	"configurations": [
		{
			"name": "Mac",
			"includePath": [
				"${workspaceFolder}/**",
				"/Users/${env:USER}/.brew/Cellar/criterion/2.3.3/include/**"
			],
			"macFrameworkPath": [
				"/System/Library/Frameworks",
				"/Library/Frameworks"
			],
			"browse" : {
				"path": [
                    "${workspaceFolder}"
                ],
                "limitSymbolsToIncludedHeaders" : true,
                "databaseFilename" : ""
            },
			"compilerPath": "/usr/bin/clang",
			"cStandard": "c11",
			"cppStandard": "c++17",
			"intelliSenseMode": "${default}"
		},
		{
			"name": "Linux",
			"includePath": [
				"${workspaceFolder}/**"
			],
			"browse" : {
				"path": [
                    "${workspaceFolder}"
                ],
                "limitSymbolsToIncludedHeaders" : true,
                "databaseFilename" : ""
            },
			"compilerPath": "/usr/bin/gcc",
			"cStandard": "c11",
			"cppStandard": "c++17",
			"intelliSenseMode": "${default}"
		}
	],
	"version": 4
}
